<!DOCTYPE html>
<html lang="pt-br">

	<head>

	    <meta charset="utf-8">
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    <meta name="description" content="Trabalho de conclusÃ£o de curso BSI">
	    <meta name="author" content="Maycon Sacht">

	    <title>Fastrip</title>

	    <%= stylesheet_link_tag    "application", media: "all"  %>
	    <%= javascript_include_tag "application" %>
	    <%= csrf_meta_tags %>
		<link href="//netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">

	</head>

	<body>
		<nav class="navbar navbar-default navbar-fixed-top">

	    	<div class='it-menu'>
	            <% if user_signed_in? %>
	         
	                <%= link_to(content_tag(:i, nil, class: 'fa fa-suitcase it-menu-company'), user_path(current_user.id), "data-toggle" => "tooltip", "data-placement" => "bottom", "title" => "Ver Viagens") %>
	                <%= link_to(content_tag(:i, nil, class: 'fa fa-cog it-menu-company'), edit_user_registration_path, "data-toggle" => "tooltip", "data-placement" => "bottom", "title" => "Alterar Cadastro") %> 
	                <%= link_to(content_tag(:i, nil, class: 'fa fa-sign-out it-menu-company'), destroy_user_session_path, "data-toggle" => "tooltip", "data-placement" => "bottom", "title" => "Sair", :method => :delete) %>
	            
	            <% elsif company_signed_in? %>
	                
	                <%= link_to(content_tag(:i, nil, class: 'fa fa-suitcase it-menu-company'), company_path(current_company.id), "data-toggle" => "tooltip", "data-placement" => "bottom", "title" => "Ver Viagens") %>
	                <%= link_to(content_tag(:i, nil, class: 'fa fa-cog it-menu-company'), edit_company_registration_path, "data-toggle" => "tooltip", "data-placement" => "bottom", "title" => "Alterar Cadastro") %> 
	                <%= link_to(content_tag(:i, nil, class: 'fa fa-sign-out it-menu-company'), destroy_company_session_path, "data-toggle" => "tooltip", "data-placement" => "bottom", "title" => "Sair", :method => :delete) %>
	        	<% end %>
			</div>
		    
		    <div class="container">
		        <div class="navbar-header page-scroll">
		            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
		                <span class="sr-only">Toggle navigation</span>
		                <span class="icon-bar"></span>
		                <span class="icon-bar"></span>
		                <span class="icon-bar"></span>
		                <span class="icon-bar"></span>
		            </button>
		            <a class="navbar-brand" href="/">Fastrip</a>
		        </div>

		        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		            <ul class="nav navbar-nav navbar-right">
		            
		                <li class="hidden">
		                    <a href="/"></a>
		                </li>
		                <% if current_page?(controller: 'home', action: 'index') %>
			                <li class="page-scroll">
			                    <a href="#search-trip">Buscar viagens</a>
			                </li>
			                <li class="page-scroll">
			                    <a href="#to-company">Ofertar viagens</a>
			                </li>
			                <li class="page-scroll">
			                	<a href="#about">Sobre</a>
			                </li>
			            <% end %>
				            
	                	<li class="page-scroll">
	                		<% if not user_signed_in? and not company_signed_in? %>
                    			<div class="button-enter">
                            		<%= link_to "Entrar", new_user_session_path, :class => 'btn submit-nav-buttons'  %>
                        		</div>
                        	<% end %>
	                	</li>
		            </ul>
		        </div>
		    </div>
		</nav>

	    <%= yield %>

	    <script>
  			<%= yield :js %>
		</script>
	    
	    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

	</body>

	<footer >
        <section id="footer" class="footer-section-home">
            <div class="container">
                <div class="row">
                	<div id="footer-copyright"class="col-xs-12">
                		<p class="footer"> &copy; 2015 Maycon Sacht - Todos os direitos reservados.</p>
                	</div>
                </div>
            </div>
        </section>
    </footer>

</html>