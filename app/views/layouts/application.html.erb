	    <title>Fastrip</title>

	    <%= stylesheet_link_tag    "application", :media => "all" %>
	    <%= javascript_include_tag "application" %>
	    <%= csrf_meta_tags %>
		<link href="//netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">
	</head>

	<body>
		<nav class="navbar navbar-default navbar-fixed-top">
		    <div class="container">
		        <div class="navbar-header page-scroll">
		            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
		                <span class="sr-only">Toggle navigation</span>
		                <span class="icon-bar"></span>
		                <span class="icon-bar"></span>
		                <span class="icon-bar"></span>
		                <span class="icon-bar"></span>
		            </button>
		            <a class="navbar-brand" href="/">Fastrip</a>
		        </div>

		        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		            <ul class="nav navbar-nav navbar-right">

		                <li class="hidden">
		                    <a href="/"></a>
		                </li>
			                
				                <li class="page-scroll">
				                    <a href="#search-trip">Buscar viagens</a>
				                </li>
				                <li class="page-scroll">
				                    <a href="#company">Ofertar viagens</a>
				                </li>
				                <li class="page-scroll">
				                    <a href="#about">Sobre</a>
				                </li>
				            
		                <li class="page-scroll">
		                    
		                    <% if user_signed_in? %>
		                        <p class='it-menu'>
		                        Bem vindo <strong><%= current_user.name %></strong>!
		                        <%= link_to 'Editar perfil', edit_user_registration_path %> 
		                        <%= link_to 'Sair', destroy_user_session_path, :method => :delete %>
		                        <p>
		                    <% elsif company_signed_in? %>
		                        <p class='it-menu'>
		                        Bem vindo <strong><%= current_company.name %></strong>!
		                        <%= link_to 'Editar Perfil', edit_company_registration_path %> 
		                        <%= link_to 'Sair', destroy_company_session_path, :method => :delete %>
		                        <p>
		                    <% else %>
		                        <div class="button-enter">
		                            <%= link_to "Entrar", new_user_session_path, :class => 'btn submit-nav-buttons'  %>
		                        </div>
		                    <% end %>
		                    
		                </li>
		            </ul>
		        </div>
		    </div>
		</nav>

	    <%= yield %>

	    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
