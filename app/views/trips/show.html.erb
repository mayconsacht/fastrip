<div class='general-trip-detail'>

  <% render 'trips/form' %>
  <p class="detail-title">
    <strong><%= @trip.name %></strong>
  </p>
  
  <p>
    <%= image_tag @trip.avatar.url(:original) %>
  </p>

  <div class="details-orig-dest">
    <i class="fa fa-plane"></i>
    <%= @trip.origin %><br>
    <i class="fa fa-plane fa-rotate-90"></i>
    <%= @trip.destination %>
  </div>

  <div class="">
    <i class="fa fa-arrow-right"></i>
    <%= @trip.in_date %>
    <i class="fa fa-arrow-left"></i>
    <%= @trip.out_date %>
  </div>

  <div>
    <%= @trip.description %>
  </div>

  <hr>
  <% @trip.posts.each do |post| %>
      <%= post.message %>
  <% end %>

</div>