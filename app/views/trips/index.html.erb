<div class='general-form-trips'>

  <h1>Resultado da Busca</h1>

  <div>
    <table class="table">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Origem</th>
          <th>Destino</th>
          <th>Preço</th>
          <th>Data de Entrada</th>
          <th>Data de Saída</th>
          <th>Categoria</th>
          <th>Descrição</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @trips.each do |trip| %>
          <tr>
            <td><%= trip.name %></td>
            <td><%= trip.origin %></td>
            <td><%= trip.destination %></td>
            <td><%= trip.price %></td>
            <td><%= trip.in_date %></td>
            <td><%= trip.out_date %></td>
            <td><%= trip.category %></td>
            <td><%= trip.description %></td>
            <td><div class="btn-group" role="group" aria-label="...">
                  <%= link_to 'Detalhar', trip, :class => 'btn btn-default'%>
            </div></td>
          </tr>
        <% end %>
      </tbody>
    </table>  
  </div>

  <br>
</div>
