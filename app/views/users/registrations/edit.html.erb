<div class='register-edit'>
    <h2>Alteração de Cadastro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="row control-group">
        <div class="field col-md-12 form-group controls">
              <%= f.text_field :name, class: 'form-control', placeholder: 'Nome do Usuário', autofocus: true %>
          </div>
      </div>

      <div class="row">
        <div class="field col-md-6 form-group controls col-md-offset-2 pass-one">
          <%= f.text_field :cpf, class: 'form-control', placeholder: 'CPF', autofocus: true %>
        </div>

        <div class="field col-md-6 form-group controls">
          <%= f.phone_field :phone, class: 'form-control', placeholder: 'Telefone', autofocus: true %>
        </div>
      </div>

      <div class="row control-group">
        <div class="field col-md-12 form-group controls">
          <%= f.text_field :andress, class: 'form-control', placeholder: 'Endereço', autofocus: true %>
        </div>
      </div>

      <div class="row control-group">
        <div class="field col-md-12 form-group controls">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="field col-md-6 form-group controls col-sm-offset-2 pass-one">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Nova Senha (caso deseje alterar)', autocomplete: "off" %>
        </div>
        <div class="field col-md-6 form-group controls">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmação da Nova Senha', autocomplete: "off" %>
        </div>
      </div>

      <div class="row">
          <div class="field col-md-12 form-group controls">
              Digite a senha atual para confirmar as alterações
              <%= f.password_field :current_password, class: 'form-control', placeholder: 'Senha Atual', autocomplete: "off" %>
          </div>
      </div>

      <div class="actions">
        <%= f.submit "Alterar", :class => 'btn btn-info' %>
      </div>
    <% end %>

    <%= link_to "Voltar", :back %>
</div>