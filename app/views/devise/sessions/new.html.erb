<div class='login'>
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <p>Se já é cadastrado utilize seu email e senha para entrar</p>

  <div class="row control-group">
      <div class="field col-xs-4 form-group controls">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
      </div>
  </div>


  <div class="row control-group">
      <div class="field col-xs-4 form-group controls">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Senha', autocomplete: "off" %>
      </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar", :class => 'navbar-link btn btn-info bt-lg'%>
  </div>
  
  <% end %>

  <%= render "devise/shared/links" %>
</div>
